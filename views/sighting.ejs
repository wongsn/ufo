<%- include('header'); -%>
<body>
  <div class="container mt-lg-6 mt-5">
  <div class="card-container">
    <div class="panel">
      <div>
        <form action="/sightings/sighted/<%=index%>/edit" method="GET" id="edit">
          <div class="form-floating mb-3">
              <input class="form-control no-border" type="textarea" name="Summary" id="details" placeholder="details" rows="3" value="<%=sighting.Summary%>" disabled/>
              <label for="details">Summary of Event</label>
          </div>

          <!-- cal field for date time -->
          <div class="form-floating mb-3">
            <input class="form-control no-border" type="datetime-local" name="DateTime" id="date" placeholder="when" value="<%=sighting.DateTime%>" disabled/>
            <label for="date">Date and Time of Sighting</label>
          </div>

          <!-- include duration  -->
          <div>
            <label for="duration">Duration: </label>
            <p id="rangenumber">0 mins</p>
            <input value = "0" class="form-range"
              type="range"
              name="Duration"
              id="duration"
              aria-placeholder="duration of sighting"
            disabled />
          </div>

          <!-- include geotag  -->
          <!-- input field for details -->
          <div class="form-floating mb-3">
              <input class="form-control no-border" type="text" placeholder="Address" id="location" name="Address" disabled/>
              <label for="location">Location of Sighting<img class="sb-title-icon" src="https://fonts.gstatic.com/s/i/googlematerialicons/location_pin/v5/24px.svg" alt=""></label>
          </div>

          <div class="form-floating mb-3">
              <input class="form-control no-border" type="text" placeholder="Lat" id="lat" name="lat" value="<%=sighting.lat%>" disabled/>
              <label for="lat">Latitude of location</label>
          </div>

          <div class="form-floating mb-3 no-border">
              <input class="form-control no-border" type="text" placeholder="Long" id="long" name="lng" value="<%=sighting.lng%>" disabled/>
              <label for="long">Longitude of location</label>
          </div>

          <div style="box-sizing: border-box; display:inline">
            <div class="form-floating mb-3 half-input-container no-border" style="box-sizing: border-box; display:inline-block;">
              <input type="text" class="form-control half-input no-border" name="State" placeholder="State/Province" id="administrative_area_level_1" value="<%=sighting.State%>" disabled/>
              <label for"administrative_area_level_1">State</label>
            </div>
            <div class="form-floating mb-3 half-input-container no-border" style="box-sizing: border-box; display:inline-block;">
              <input class="form-control half-input no-border" type="text" name="Country" placeholder="Country" id="country" value="<%=sighting.Country%>" disabled>
              <label for"country">Country</label>
            </div>
          </div>

<!-- 
        
        <div class="form-floating mb-3">

          <input
            type="radio"
            name="shape"
            id="shape"
            aria-placeholder="shape of sighting"
          />
          <option value="">Circular</option>
          <option value="">Triangle</option>
          <option value="">Rectangle</option>
          <option value="">Morphing</option>
          <label for="shape">What was the shape?</label>
        </div> -->

        <p><button class="btn btn-primary btn-cta" id="submitbutton" type="submit" name="_method" form="edit" value="PUT"/> Edit </button></p>
                  

        </form>
          
          <form action="/sightings/sighted/<%=index%>?_method=DELETE" method="POST" id="delete">
 <button class="btn btn-danger btn-cta" id="delbutton" type="submit" form="delete" name="_method" value="DELETE"/> Delete </button>
</form>
         

    </div>
  </div>
  <div class="map" id="map"></div>
</div>
</div>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDcm50m-9y3y24c0TwDc1Ii3LFeTVU2IAs&libraries=places&callback=initMap&channel=GMPSB_addressselection_v1_cABC" async defer></script>

<!-- stylesheet and css for maps -->
<link rel="stylesheet" href="/static/maps.css">
<script defer src="/static/maps.js"></script>
  
</body>
<%- include('footer'); -%>
